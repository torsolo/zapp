}

.StickyHeader, .StickyFooter {
  flex: 0 0 auto;
  color:whitesmoke;
  padding:8px;
  cursor:pointer;
}
.StickyContent {
	flex: 1 1 auto;
	overflow-y: auto;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
	color:gold;
}
.buio {display:none}
